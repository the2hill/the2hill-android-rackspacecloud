<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_server_layout" android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<!-- Name Flavor (256 Server) Image (Ubuntu) Memory Disk Status Public 
			IP Addresses Private IP Addresses Actions -Reset Password -Resize Server 
			-Delete Server Soft Reboot / Hard Reboot android:layout_marginTop="-300dip" -->

		<ImageView android:id="@+id/view_server_os_logo"
			android:layout_width="700dip" android:layout_height="700dip"
			android:adjustViewBounds="true" android:layout_gravity="left" />


		<!-- Server Name - Setting top margin to -700 so it will sit over the OS 
			logo image -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:layout_marginTop="-700dip" android:text="Server Name"
			android:singleLine="false" />
		<TextView android:id="@+id/view_server_name"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="22dip" android:layout_marginRight="30dip"
			android:scrollHorizontally="true" android:gravity="fill_horizontal"
			android:textStyle="bold" android:textSize="20.0sp" android:textColor="#fff" />

		<!-- Operating System -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Operating System" android:singleLine="false" />
		<TextView android:id="@+id/view_server_os"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="22dip" android:layout_marginRight="30dip"
			android:scrollHorizontally="true" android:gravity="fill_horizontal"
			android:textStyle="bold" android:textSize="20.0sp" android:textColor="#fff" />

		<!-- Memory -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Memory" android:singleLine="false" />
		<TextView android:id="@+id/view_server_memory"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="22dip" android:layout_marginRight="30dip"
			android:scrollHorizontally="true" android:gravity="fill_horizontal"
			android:textStyle="bold" android:textSize="20.0sp" android:textColor="#fff" />

		<!-- Disk -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Disk" android:singleLine="false" />
		<TextView android:id="@+id/view_server_disk"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="22dip" android:layout_marginRight="30dip"
			android:scrollHorizontally="true" android:gravity="fill_horizontal"
			android:textStyle="bold" android:textSize="20.0sp" android:textColor="#fff" />

		<!-- Status -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Status" android:singleLine="false" />
		<TextView android:id="@+id/view_server_status"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="22dip" android:layout_marginRight="30dip"
			android:scrollHorizontally="true" android:gravity="fill_horizontal"
			android:textStyle="bold" android:textSize="20.0sp" android:textColor="#fff" />

		<!-- Public IP Addresses -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Public IP Addresses" android:singleLine="false" />

		<!-- Private IP Addresses -->
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="22dip"
			android:text="Private IP Addresses" android:singleLine="false" />

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_marginTop="10dip">
			<Button xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/view_server_soft_reboot_button" android:text="Soft Reboot"
				android:layout_width="130dip" android:layout_height="wrap_content"
				android:layout_gravity="left" android:layout_marginLeft="20dip"
				android:layout_marginTop="10dip" />

			<Button xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/view_server_hard_reboot_button" android:text="Hard Reboot"
				android:layout_width="130dip" android:layout_height="wrap_content"
				android:layout_gravity="left" android:layout_marginLeft="10dip"
				android:layout_marginTop="10dip" />
		</LinearLayout>

		<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
			android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" 
			android:layout_marginTop="10dip" > <Button xmlns:android="http://schemas.android.com/apk/res/android" 
			android:id="@+id/view_server_resize_button" android:text="Resize Server" 
			android:layout_width="130dip" android:layout_height="wrap_content" android:layout_gravity="left" 
			android:layout_marginLeft="20dip" android:layout_marginTop="10dip" /> <Button 
			xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/view_server_rebuild_button" 
			android:text="Rebuild Server" android:layout_width="130dip" android:layout_height="wrap_content" 
			android:layout_gravity="left" android:layout_marginLeft="10dip" android:layout_marginTop="10dip" 
			/> </LinearLayout> -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_marginTop="10dip">
			<Button xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/view_server_resize_button" android:text="Resize Server"
				android:layout_width="130dip" android:layout_height="wrap_content"
				android:layout_gravity="left" android:layout_marginLeft="20dip"
				android:layout_marginTop="10dip" />

			<Button xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/view_server_delete_button" android:text="Delete Server"
				android:layout_width="130dip" android:layout_height="wrap_content"
				android:layout_gravity="left" android:layout_marginLeft="10dip"
				android:layout_marginTop="10dip" />
		</LinearLayout>

	</LinearLayout>

	<!-- android:layout_height="wrap_content" -->
</ScrollView>